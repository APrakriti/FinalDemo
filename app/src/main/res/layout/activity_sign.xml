<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/doctor"
        android:id="@+id/hospitalimg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_gravity="center">

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/signupfirstname"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:hint="First Name"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp" />

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/signupmiddlename"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:hint="Middle Name"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/signuplastname"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="Last Name"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/signupAddress"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="Address"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/signupContact"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="Contact"
        android:inputType="phone"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/signupemail"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="Email"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/signupUsername"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="UserName"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/singupPassword"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/singupconfirmPassword"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:hint="Confirm Password"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="10dp"/>


    <Button
        android:background="@drawable/shape_button"
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>
</ScrollView>